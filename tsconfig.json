{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "types": ["svelte", "reflect-metadata", "jest"],
    "paths": {
      "src/*": ["src/*"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "verbatimModuleSyntax": false,
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules/*", "dist/*"]
}
